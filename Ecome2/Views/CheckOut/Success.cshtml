@model Ecome2.Models.TwoModels

<h2>Order Confirmation</h2>
<p>Order Number: @Model.Order.OrderNumber</p>
<p>Order Date: @Model.Order.Date</p>
<p>Total: @Model.Order.Total</p>

<table>
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Quantity</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderItems)
        {
            <tr>
                <td>@item.Product.Title</td>
                <td>@item.Quantity</td>
                <td>@item.Subtotal</td>
            </tr>
        }
    </tbody>
</table>
