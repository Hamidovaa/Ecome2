@model TwoModels
@section Styles{
    <style>
        .circle {
            display: inline-block;
            width: 20px;
            height: 20px;
            border-radius: 50%;
            margin: 0 5px;
        }

        .size-option {
            display: inline-block;
            margin-right: 10px;
            padding: 5px 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }
        .fD{
            width:40%;
            background-color:#333;
        }
        .bPd{
            background: linear-gradient(to right, #868f96 0%, #596164 100%);
            border-radius:10%;
        }
    </style>
}

<div class="container container-240">
    <div class="single-product-detail product-bundle product-aff">
        @foreach(var item in Model.products)
        {
            <ul class="breadcrumb">
                <li><a href="#">Home</a></li>
                <li class="active">@item.Category.Name</li>
                <li class="active">@item.Title</li>
            </ul>
            <div class="row">

                <div class="col-xs-12 col-sm-6 col-md-6">
                    <div class="flex product-img-slide">
                        <div class="product-images">
                            <div class="main-img js-product-slider">
                                <a href="#" class="hover-images effect"><img src="~/UploadProducts/@item.ImgUrlBase" alt="photo" class="img-reponsive"></a>
                                @if (item.Images != null)
                                {
                                    @foreach (var image in item.Images)
                                    {
                                        <a href="#" class="hover-images effect"><img src="~/UploadProducts/@image.ImgUrl" alt="photo" class="img-reponsive"></a>
                                    }
                                }
                            </div>
                        </div>
                        <div class="multiple-img-list-ver2 js-click-product">
                            <div class="product-col">
                                <div class="img active">
                                    <img src="~/UploadProducts/@item.ImgUrlBase" alt="photo" class="img-reponsive">
                                </div>
                            </div>
                            @if (item.Images != null)
                            {
                                @foreach (var image in item.Images)
                                {
                                    <div class="product-col">
                                        <div class="img">
                                            <img src="~/UploadProducts/@image.ImgUrl" alt="images" class="img-responsive">
                                        </div>
                                    </div>
                                }
                            }

                        </div>
                    </div>
                </div>

                <div class="col-xs-12 col-sm-6 col-md-6">
                    <div class="single-flex">
                        <div class="single-product-info product-info product-grid-v2 s-50">
                            <p class="product-cate">@item.Category.Name</p>
                            <div class="product-rating">
                                <span class="star star-5"></span>
                                <span class="star star-4"></span>
                                <span class="star star-3"></span>
                                <span class="star star-2"></span>
                                <span class="star star-1"></span>
                                <div class="number-rating">( 896 reviews )</div>
                            </div>

                            <div>
                                <h3 class="product-title"><a href="#">@item.Title</a></h3>
                                <div class="product-price">
                                    <span>@item.Price.ToString("C")</span>
                                </div>
                               
                            </div>

                            <form method="post" action="@Url.Action("AddToCartt", "Cart")">
                                <input type="hidden" name="productId" value="@Model.products.FirstOrDefault().Id">
                                <div class="color-group col-md-5">
                                    <label>Color :</label>
                                    <select name="SelectedColorId" class="form-control fD">
                                        @foreach (var color in item.ProductColors.Select(pc => pc.Color))
                                        {
                                            <option style="background-color:@color.Code" value="@color.Id">@color.Name</option>
                                        }
                                    </select>
                                </div>

                                <div class="size-group col-md-5">
                                    <label>Size :</label>
                                    <select name="SelectedSizeId" class="form-control fD">
                                        @foreach (var size in item.ProductSizes.Select(ps => ps.Size))
                                        {
                                            <option value="@size.Id">@size.Name</option>
                                        }
                                    </select>  
                                </div>

                                <div class="single-product-button-group col-md-12" style="padding-top:30px;">
                                    <div class="e-btn cart-qtt btn-gradient">
                                        <div class="e-quantity">
                                            <input type="number" step="1" min="1" max="999" name="Quantity" value="1" title="Qty" class="qty input-text js-number" size="4">
                                            <div class="tc pa">
                                                <a class="js-plus quantity-right-plus"><i class="fa fa-caret-up"></i></a>
                                                <a class="js-minus quantity-left-minus"><i class="fa fa-caret-down"></i></a>
                                            </div>
                                        </div>
                                        <button type="submit" class="btn-add-cart bPd">Add to cart <span class="icon-bg icon-cart v2"></span></button>
                                    </div>
                                    <a href="#" class="e-btn btn-icon">
                                        <span class="icon-bg icon-wishlist"></span>
                                    </a>
                                    <a href="#" class="e-btn btn-icon">
                                        <span class="icon-bg icon-compare"></span>
                                    </a>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        }   
    </div>
</div>
