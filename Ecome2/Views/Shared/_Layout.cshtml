    <script>
        $(document).ready(function () {
            // Remove item from cart
            $('.e-del').click(function (e) {
                e.preventDefault();
                var productId = $(this).data('product-id');

                // AJAX call to remove item from cart
                $.ajax({
                    url: '@Url.Action("Delete", "Cart")',
                    method: 'POST',
                    data: { id: productId },
                    success: function (response) {
                        if (response.success) {
                            console.log('Product removed successfully');
                            $(`.e-del[data-product-id=${productId}]`).closest('.item-cart').remove();
                            updateTotalPrices(response.grandTotal, response.subTotal);
                            updateCartCount(response.itemCount);
                            removeViewCartItem(productId);
                        } else {
                            console.error('Product not found');
                        }
                    },
                    error: function () {
                        console.error('Error removing product');
                    }
                });
            });

            // Function to update total prices
            function updateTotalPrices(grandTotal, subTotal) {
                $('.order-total td').text(grandTotal.toFixed(2));
                $('.cart-subtotal td').text(subTotal.toFixed(2));
            }

            // Function to update cart count
            function updateCartCount(count) {
                $('.cart-count').text(count);
            }
            function removeViewCartItem(productId) {
                $(`.remove-cart[data-product-id=${productId}]`).closest('.item_cart').remove();
            }
        });
    </script>
