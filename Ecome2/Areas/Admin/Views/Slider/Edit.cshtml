@model Slider

<div class="page-content">
    <div class="container-fluid">



        <div class="row">
            <div class="col-lg-12">
                <div class="card job-filter">
                    <div class="card-body p-3">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="card job-filter">
                                    <div class="card-body p-3">
                                        <form class="row" method="post" asp-area="Admin" asp-controller="Slider" asp-action="Edit" enctype="multipart/form-data">
                                            @Html.AntiForgeryToken()
                                            <div class="col-md-3">
                                                <label>Sub Title</label>
                                                <input asp-for="SubTitle" type="text" class="form-control" />
                                                <span asp-validation-for="SubTitle" class="text-danger mt-5"></span>
                                            </div>
                                            <div class="col-md-3">
                                                <label>Title</label>
                                                <input asp-for="Title" type="text" class="form-control" />
                                                <span asp-validation-for="Title" class="text-danger mt-5"></span>
                                            </div>
                                            <div class="col-md-3">
                                                <label>Price</label>
                                                <input asp-for="Price" type="text" class="form-control" />
                                                <span asp-validation-for="Price" class="text-danger mt-5"></span>
                                            </div>
                                            <img width="150px" height="150px" src="~/UploadSlider/@Model.ImgUrl"/>
                                            <div class="col-md-3">
                                                <label>IMG</label>
                                                <input asp-for="file" type="file" class="form-control" />
                                            </div>
                                            <div class="col-md-3">
                                                <label>IMG</label>
                                                <input asp-for="IsCheck" class="form-check" />
                                            </div>
                                            
                                            <div class="col-md-3">
                                                <button type="submit" class="btn btn-danger mt-3 btn-block">Edit</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                            <!--end col-->
                        </div>
                    </div>
                </div>
            </div>
            <!--end col-->
        </div>
    </div> <!-- container-fluid -->
</div>


