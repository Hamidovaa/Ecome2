@model List<Products>

@section Styles {
    <link href="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/8.11.8/sweetalert2.min.css" rel="stylesheet" />
}

<div class="page-content">
    <div class="container-fluid">

        <a class="btn btn-succes" asp-area="Admin" asp-controller="Products" asp-action="Create">Create new Product</a>

        <div class="row">
            <div class="col-lg-12">
                <div class="card job-filter">
                    <div class="card-body p-3">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">Title</th>
                                    <th scope="col">Description</th>
                                    <th scope="col">Price</th>
                                    <th scope="col">Category name</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Title</td>
                                        <td>@item.Description</td>
                                        <td>@item.Price</td>
                                        <td>@item.Category.Name</td>
                                        <td>@item.ImgUrlBase</td>
                                        <td> <img width="200" height="200" src="~/UploadProducts/@item.ImgUrlBase" /></td>

                                        <td>
                                            @if (item.IsActive)
                                            {
                                                <span class="badge bg-success">Active</span>
                                                <a class="activateBtn btn btn-warning" asp-area="Admin" asp-controller="Products" asp-action="Activate" asp-route-id="@item.Id">Deactivate</a>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">Inactive</span>
                                                <a class="activateBtn btn btn-success" asp-area="Admin" asp-controller="Products" asp-action="Activate" asp-route-id="@item.Id">Activate</a>
                                            }
                                        </td>
                                        <td>
                                            <a class="btn btn-success" asp-area="Admin" asp-controller="Products" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                        </td>
                                       
                                        @* <td>
                                    <button data-id="@item.Id" type="button" class="btn btn-primary mb-3 editBtn" data-bs-toggle="modal" data-bs-target="#exampleModalEdit">
                                    Edit Slider
                                    </button>
                                    </td> *@


                                    </tr>
                                };

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <!--end col-->
        </div>




    </div> <!-- container-fluid -->
</div>



@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/8.11.8/sweetalert2.min.js"></script>
    <script>
        $(document).ready(function () {
            $(document).on('click', '.deleteBtn', function (e) {
                e.preventDefault();
                let url = $(this).attr("href");
                let element = this.parentElement.parentElement;

                Swal.fire({
                    title: 'Silmək istədiyinizdən əminsinizmi?',
                    text: "Sildikdən sonra geri qaytarmaq mümkün olmayacaq!",
                    type: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Sil',
                    cancelButtonText: 'Geri'

                }).then((result) => {
                    if (result.value) {
                        $.ajax({
                            url: url,
                            type: "get",
                            dataType: "json",
                            success: function (response) {
                                console.log(response)
                                if (response.status == 200) {
                                    Swal.fire(
                                        'Silindi!',
                                        '',
                                        'success'
                                    )
                                    element.outerHTML = '';
                                }
                                else if (response.status == 400) {
                                    //toastr.error(response.message)
                                    Swal.fire({
                                        title: 'Error!',
                                        icon: 'error',
                                        confirmButtonText: 'Cool'
                                    })
                                }
                            }
                        });
                    }
                })
            });
        });


        $(document).on('click', '.activateBtn', function (e) {
            e.preventDefault();
            let url = $(this).attr("href");
            let element = $(this);
            var span = $(this).prev(); // Butondan önceki span elementini seçiyoruz

            Swal.fire({
                title: 'Dəyişmək istədiyinizə əminsiniz?',
                text: "",
                type: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Dəyiş',
                cancelButtonText: 'Geri'
            }).then((result) => {
                if (result.value) {
                    $.ajax({
                        url: url,
                        type: "get",
                        dataType: "json",
                        success: function (response) {
                            console.log(response)
                            if (response.status == 200) {
                                Swal.fire(
                                    'Dəyişdirildi',
                                    '',
                                    'success'
                                ).then(() => {
                                    // Butonun içeriğini değiştir
                                    if (element.text().trim() === "Activate") {
                                        element.text("Deactivate");
                                        // Butonun rengini değiştir
                                        element.removeClass("btn-success").addClass("btn-warning");
                                    } else {
                                        element.text("Activate");
                                        // Butonun rengini değiştir
                                        element.removeClass("btn-warning").addClass("btn-success");
                                    }
                                    // Butona tıkladığınızda yanındaki span'in sınıflarını değiştirme
                                    if (span.hasClass('bg-success')) {
                                        span.removeClass('bg-success').addClass('bg-danger').text('Inactive');
                                    } else {
                                        span.removeClass('bg-danger').addClass('bg-success').text('Active');
                                    }
                                });
                            } else if (response.status == 400) {
                                Swal.fire({
                                    title: 'Error!',
                                    icon: 'error',
                                    confirmButtonText: 'Cool'
                                })
                            }
                        }
                    });
                }
            });
        });


    </script>
}