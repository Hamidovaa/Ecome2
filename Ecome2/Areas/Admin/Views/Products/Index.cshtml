@model List<Products>

<div class="page-content">
    <div class="container-fluid">

        <a class="btn btn-succes" asp-area="Admin" asp-controller="Products" asp-action="Create">Create new Product</a>

        <div class="row">
            <div class="col-lg-12">
                <div class="card job-filter">
                    <div class="card-body p-3">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">Title</th>
                                    <th scope="col">Description</th>
                                    <th scope="col">Price</th>
                                    <th scope="col">Category name</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Title</td>
                                        <td>@item.Description</td>
                                        <td>@item.Price</td>
                                        <td>@item.Category.Name</td>
                                        
                                        <td>
                                            <a class="deleteBtn btn btn-danger" asp-area="Admin" asp-controller="Products" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                        </td>
                                        <td>
                                            <a class="btn btn-success" asp-area="Admin" asp-controller="Products" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                        </td>
                                        @* <td>
                                    <button data-id="@item.Id" type="button" class="btn btn-primary mb-3 editBtn" data-bs-toggle="modal" data-bs-target="#exampleModalEdit">
                                    Edit Slider
                                    </button>
                                    </td> *@


                                    </tr>
                                };

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <!--end col-->
        </div>




    </div> <!-- container-fluid -->
</div>
